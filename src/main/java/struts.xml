<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="strutsBean" extends="struts-default,json-default" namespace="/">
        <action name="login" class="cn.edu.zjut.action.UserAction" method="login">
            <result name="success">/index.jsp</result>
            <result name="failed">/login.jsp</result>
        </action>
        <action name="advertisement" class="cn.edu.zjut.action.AdvertisementAction" method="getAdvertisementList">
            <result name="success" type="json">
                <param name="root">advertisementlist</param>
            </result>
        </action>
        <action name="displayShopGoods" class="cn.edu.zjut.action.GoodsAction" method="displayShopGoods">
            <result name="displayShopGoodsSuccess">/productList.jsp</result>
        </action>
        <action name="search" class="cn.edu.zjut.action.GoodsAction" method="search">
            <result name="success" type="json">
                <param name="root">goodslist</param>
            </result>
        </action>
        <action name="registerShopmanager" class="cn.edu.zjut.action.registerShopmanagerAndEnterpriseagencyAction" method="registerShopmanager">
            <result name="success" type="json">
                <param name="root">platformAdministraorIndex.jsp</param>
            </result>
        </action>
        <action name="registerEnterpriseagency" class="cn.edu.zjut.action.registerShopmanagerAndEnterpriseagencyAction" method="registerEnterpriseagency">
<!--            <result name="success" type="json">-->
                <param name="root">platformAdministraorIndex.jsp</param>
<!--            </result>-->
        </action>
        <action name="displayShopmanager" class="cn.edu.zjut.action.registerShopmanagerAndEnterpriseagencyAction" method="displayShopmanager">
<!--            <result name="success" type="json">-->
                <result name="success">/shopmanagerList.jsp</result>
<!--            </result>-->
        </action>
        <action name="displayEnterpriseagency" class="cn.edu.zjut.action.registerShopmanagerAndEnterpriseagencyAction" method="displayenterpriseagency">
            <!--            <result name="success" type="json">-->
            <result name="success">/enterpriseagencyList.jsp</result>
            <!--            </result>-->
        </action>
    </package>

</struts>